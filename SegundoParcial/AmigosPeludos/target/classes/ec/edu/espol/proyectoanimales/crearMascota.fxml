<VBox alignment="CENTER" prefHeight="527.0" prefWidth="626.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ec.edu.espol.proyectoanimales.CrearMascotaController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <AnchorPane prefHeight="484.0" prefWidth="591.0" style="-fx-background-color: #9ded74;">
               <children>
                  <VBox alignment="CENTER" prefHeight="475.0" prefWidth="586.0">
                     <children>
                        <Label fx:id="titulo" alignment="CENTER" contentDisplay="CENTER" prefHeight="66.0" prefWidth="280.0" text="Crear Mascota" textFill="#252520">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <HBox alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="33.0" prefWidth="185.0" text="Nombre:" />
                              <TextField fx:id="nombre" prefHeight="25.0" prefWidth="196.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="33.0" prefWidth="185.0" text="Raza:" />
                              <TextField fx:id="raza" prefHeight="25.0" prefWidth="196.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="33.0" prefWidth="185.0" text="Dueño:" />
                              <ComboBox fx:id="opDueño" prefHeight="25.0" prefWidth="194.0" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="35.0" prefWidth="586.0">
                           <children>
                              <CheckBox fx:id="esPerro" mnemonicParsing="false" prefHeight="17.0" prefWidth="74.0" text="Perro" />
                              <Label prefHeight="17.0" prefWidth="75.0" />
                              <CheckBox fx:id="esGato" mnemonicParsing="false" prefHeight="17.0" prefWidth="74.0" text="Gato" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="33.0" prefWidth="185.0" text="Fecha Nacimiento:" />
                              <DatePicker fx:id="fecha" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER">
                           <children>
                              <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="33.0" prefWidth="262.0" text="Foto:   src/main/resources/ec/edu/espol/data/" />
                              <TextField fx:id="fotoRuta" prefHeight="25.0" prefWidth="196.0" />
                              <Label text=".png" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="53.0" prefWidth="390.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#guardar" prefHeight="38.0" prefWidth="117.0" text="Guardar" />
                              <Label prefHeight="17.0" prefWidth="75.0" />
                              <Button mnemonicParsing="false" onAction="#cancelar" prefHeight="38.0" prefWidth="117.0" text="Cancelar" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
